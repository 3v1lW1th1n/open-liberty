<server>
  <featureManager>
    <feature>jndi-1.0</feature>
    <!-- <feature>osgiConsole-1.0</feature> -->
    <feature>persistentExecutor-1.0</feature>
    <feature>servlet-3.1</feature>
    <feature>timerInterfacesTestFeature-1.0</feature>
    <feature>localConnector-1.0</feature>
  </featureManager>

  <include location="../fatTestPorts.xml"/>

  <persistentExecutor jndiName="concurrent/myScheduler" taskStoreRef="DBTaskStore" retryLimit="1" initialPollDelay="30m"/>

  <databaseStore id="DBTaskStore" createTables="false">
    <dataSource fat.modify="true" containerAuthDataRef="authx" jndiName="jdbc/schedDB" id="TaskStoreDS">
      <jdbcDriver libraryRef="FATJDBCLib"/>
      <!-- This database gets manually pre-created in the JUnit side of the test -->
      <properties databaseName="${shared.resource.dir}/data/scheddb"/>
    </dataSource>
  </databaseStore>

  <authData fat.modify="true" id="authx" user="userx" password="passx"/>
  
  <library id="FATJDBCLib">
    <fileset dir="${shared.resource.dir}/derby"/>
  </library>

  <!-- database (always Derby) for the test application -->
  <dataSource id="DefaultDataSource">
    <jdbcDriver libraryRef="DerbyJDBCLib"/>
    <properties createDatabase="create" databaseName="memory:testdb"/>
  </dataSource>
  <library id="DerbyJDBCLib">
    <fileset dir="${shared.resource.dir}/derby"/>
  </library>
  
  <javaPermission codebase="${shared.resource.dir}/derby/derby.jar" className="java.security.AllPermission"/>
  <javaPermission className="java.io.FilePermission" name="${server.config.dir}/ddl/*" actions="read"/>
  <javaPermission className="java.lang.RuntimePermission" name="modifyThread"/>
  <javaPermission className="java.lang.RuntimePermission" name="getClassLoader"/>
  
  <variable name="onError" value="FAIL"/>
</server>